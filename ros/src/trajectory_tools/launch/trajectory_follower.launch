<!-- trajectory recorder launch -->
<launch >
	<!-- arguments -->
	<arg name="path_file" default="$(find trajectory_tools)/../../maps/nic_garage/sample_path.txt" />

	<!-- trajectory follower -->
	<node name="trajectory_follower" pkg="trajectory_tools" type="trajectory_follower" output="screen" >
		<param name="/map_frame" value="/world" type="string" />
		<param name="/base_link_frame" value="/base_link" type="string" />
		<param name="/path_file_name" value="$(arg path_file)" type="string" />
		<param name="/look_ahead_dist" value="1.5" type="double" />
		<param name="/max_vel" value="1.0" type="double" />
		<param name="/kv" value="0.8" type="double" />
		<param name="/publish_hz" value="20.0" type="double" />
	</node >

	<!-- trajectory drawer -->
	<node name="trajectory_drawer" pkg="trajectory_tools" type="trajectory_drawer" >
		<param name="/map_frame" value="/world" type="string" />
		<param name="/path_file_name" value="$(arg path_file)" type="string" />
		<param name="/draw_interval" value="0.5" type="double" />
	</node >
</launch >
